        {
            "type": "node",
            "request": "launch",
            "name": "jest:runSingleTestFile", 
            "program": "${workspaceFolder}/node_modules/jest/bin/jest.js",
            "args": [
                "${relativeFile}" 
            ],
            "protocol": "legacy",
            "stopOnEntry": false,
            "preLaunchTask": "Build install modules"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "jest:full and watching all",
            "program": "${workspaceFolder}/node_modules/jest/bin/jest.js",
            "args": [
                 "--watchAll"
            ],
            "protocol": "legacy",
            "stopOnEntry": false
        },
        {
            "type": "node",
            "request": "launch",
            "name": "jest:full", 
           "program": "${workspaceFolder}/node_modules/jest/bin/jest.js", 
            "protocol": "legacy",
            "stopOnEntry": false
        } 
